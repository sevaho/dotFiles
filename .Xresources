! -----------------------------------------------------------------------------------------------------------------------------
! ROFI COLORS
! -----------------------------------------------------------------------------------------------------------------------------

! enable all colors
rofi.color-enabled:     true

! color scheme for normal row
rofi.color-normal:      argb:00000000,  #D8DEE9 , argb:00000000,  #536a70  ,  #1B2B34

! color scheme for urgent row
rofi.color-urgent:      argb:00000000,  #F99157 , argb:00000000,  #F99157 ,  #1B2B34

! color scheme for active row
rofi.color-active:      argb:00000000,  #6699CC , argb:00000000,  #6699CC ,  #1B2B34

! color scheme window
!rofi.color-window:      argb:ee222222,  #536a70  ,  #536a70 
rofi.color-window: argb:c71d2226, #536a70, #536a70

! separator style (none, dash, solid)
!rofi.separator-style:   solid
! ------------------------------------------------------------------------------
! ROFI Color theme
! ------------------------------------------------------------------------------
! rofi.color-normal: #0015262c, #ECB3FF, #0015262c, #ECB3FF, #182e3e
! rofi.color-active: #0015262c, #38acd6, #0015262c, #38acd6, #15262c
! rofi.color-urgent: #0015262c, #dc322f, #005262c, #dc322f, #15262c

rofi.hide-scrollbar: 	true
rofi.font:  			Hack 9
rofi.separator-style:   solid
rofi.bw: 			2
rofi.widht: 5000
rofi.columns:		1
rofi.sidebar-mode:  true

! -----------------------------------------------------------------------------------------------------------------------------
! URXVT
! -----------------------------------------------------------------------------------------------------------------------------

! general settings
URxvt.saveLines: 100000
URxvt.scrollBar: False
URxvt.scrollstyle: rxvt
URxvt*termName: rxvt-unicode-patched-256color
URxvt*pointerBlank: True
URxvt.urgentOnBell: True
URxvt.cursorBlink: True
URxvt.cursorUnderline: False
URxvt.iso14755: False
URxvt*insecure: false
URxvt*depth: 32

! clickable links
URxvt.url-launcher: /usr/bin/xdg-open
URxvt.matcher.button: 1

! extensions
URxvt.urlLauncher: xdg-open
URxvt.urlButton: 1
URxvt.underlineURLs: True


URxvt.copyCommand:  xsel -b -selection clipboard
URxvt.pasteCommand:  xsel -o -selection clipboard
URxvt.perl-ext-common: selection-to-clipboard,default,matcher,resize-font

! keybindings
URxvt.keysym.Control-Shift-C: perl:clipboard:copy
URxvt.keysym.Control-Shift-V: perl:clipboard:paste
URxvt.keysym.Shift-Control-V: eval:paste_clipboard
URxvt.keysym.Shift-Control-C: eval:selection_to_clipboard

! font
URxvt.font: xft:Hack:size=9:antialias=true:hinting=true,xft:FontAwesome:size=5:antialias=true:hinting=true
st.font: xft:Hack:size=9:antialias=true:hinting=true,xft:FontAwesome:size=5:antialias=true:hinting=true

st.opacity:      255

URxvt.letterSpace: -1

URxvt.foreground: #839496
URxvt*background: [91]#1d2226   

! colors
! black
URxvt.color0  : #303030
URxvt.color8  : #536a70

! red
URxvt.color1  : #cb4b16 
URxvt.color9  : #ba4443

! green
URxvt.color2  : #AFD787 
URxvt.color10 : #98c379

! yellow
URxvt*.color3 : #ffcc66
URxvt.color11 : #e5c07b

! blue
URxvt.color4  : #87D7FF
URxvt*.color12: #5fafd7

! magenta
URxvt*.color5 : #cc99cc 
URxvt*.color13: #b777e0

! cyan
URxvt*.color6 : #66cccc
URxvt.color14 : #2aa198  

! white
URxvt.color7  : #e8e8de
!URxvt.color7 : #E2E2D8
URxvt.color15 : #fdf6e3 

