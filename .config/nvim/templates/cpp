using namespace std;

// -----------------------------------------------------------------------------------------------------------------------------
// VARIABLES
// -----------------------------------------------------------------------------------------------------------------------------

#define CONSTANT 100

// -----------------------------------------------------------------------------------------------------------------------------
// CLASSES
// -----------------------------------------------------------------------------------------------------------------------------

class Main {

    private:

        string arg1;

    public:

        Main (string arg1) {
        
            this->arg1 = arg1;
        
        }

        void print () {

            cout << "argument1: " << arg1 << endl;
        
        } 

};

// -----------------------------------------------------------------------------------------------------------------------------
// FUNCTIONS
// -----------------------------------------------------------------------------------------------------------------------------

void usage () {

    printf("%s\n", "Pass 1 argument");
    exit(0);

};

// -----------------------------------------------------------------------------------------------------------------------------
// MAIN
// -----------------------------------------------------------------------------------------------------------------------------

int main (int argc, char *argv[]) {

	if (argc < 2) {

        usage();

	} else {

        Main main(argv[1]);
        main.print();

	}
	
	return 0;

}
