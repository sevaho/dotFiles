# -----------------------------------------------------------------------------------------------------------------------------
# VARIABLES
# -----------------------------------------------------------------------------------------------------------------------------

param (

    [string]$arg1,
    [string]$arg2 = "<++>",
    [Parameter(Mandatory=$true)][string]$arg2,
    [string]$arg4 = $(Read-Host "Input arg, please")

)

# -----------------------------------------------------------------------------------------------------------------------------
# FUNCTIONS
# -----------------------------------------------------------------------------------------------------------------------------

function func1 {

    param([string]$arg)   

    try {

    write-host $arg -ForegroundColor Green

    } catch {

    write-host "Something went wrong:" -ForegroundColor Red
    write-host ("error is {0}" -f $_) -ForegroundColor Red
    exit

    }

}

# -----------------------------------------------------------------------------------------------------------------------------
# MAIN
# -----------------------------------------------------------------------------------------------------------------------------

function main {

    func1 -arg $arg1

}

main
