import sys
import getopt

# -----------------------------------------------------------------------------------------------------------------------------
# VARIABLES
# -----------------------------------------------------------------------------------------------------------------------------

CONSTANT_A = 100

# -----------------------------------------------------------------------------------------------------------------------------
# CLASSES
# -----------------------------------------------------------------------------------------------------------------------------


class Main(object):

    def __init__ (self, argv):

        arg1 = ''

        try:

            opts, args = getopt.getopt(argv, "ha:", ["arg1="])

        except getopt.GetoptError:

            usage()

        for opt, arg in opts:

            if opt == '-h':
                usage()
            elif opt in ("-a", "--arg1"):
                self.arg1 = arg

    def print (self):

        print("arg1: %s" % self.arg1)

# -----------------------------------------------------------------------------------------------------------------------------
# FUNCTIONS
# -----------------------------------------------------------------------------------------------------------------------------


def usage ():

    print("%s usage: " % sys.argv[0])

    sys.exit(1)

# -----------------------------------------------------------------------------------------------------------------------------
# MAIN
# -----------------------------------------------------------------------------------------------------------------------------


if __name__ == "__main__":

    main = Main(sys.argv[1:])
    main.print()
