#! /usr/bin/python

import sys


# -----------------------------------------------------------------------------------------------------------------------------
# VARIABLES
# -----------------------------------------------------------------------------------------------------------------------------

# -----------------------------------------------------------------------------------------------------------------------------
# CLASSES
# -----------------------------------------------------------------------------------------------------------------------------

class Main(object):

    def __init__(self):

        if len(sys.argv) == 2:
            print("%s" % (sys.argv[1]))
        else:
            sys.stderr.write("Usage: %s <name>\n" % (sys.argv[0]))


# -----------------------------------------------------------------------------------------------------------------------------
# FUNCTIONS
# -----------------------------------------------------------------------------------------------------------------------------

# -----------------------------------------------------------------------------------------------------------------------------
# MAIN
# -----------------------------------------------------------------------------------------------------------------------------

if __name__ == "__main__":

    main = Main()


