require 'optparse'
require 'ostruct'

# -----------------------------------------------------------------------------------------------------------------------------
# VARIABLES
# -----------------------------------------------------------------------------------------------------------------------------

# -----------------------------------------------------------------------------------------------------------------------------
# CLASSES
# -----------------------------------------------------------------------------------------------------------------------------

class Main

    @@arg1

    def initialize

        options = OpenStruct.new

        OptionParser.new do |opt|

            opt.on('-a', '--arg1 ARGUMENT1', 'The_first_argument') { |o| options[:arg1] = o }

        end.parse!

        @@arg1 = options.arg1

    end

    def print

        puts "arg1: #@@arg1"

    end

end

# -----------------------------------------------------------------------------------------------------------------------------
# FUNCTIONS
# -----------------------------------------------------------------------------------------------------------------------------

def usage

    puts "usage"

end

# -----------------------------------------------------------------------------------------------------------------------------
# MAIN
# -----------------------------------------------------------------------------------------------------------------------------

main = Main.new
main.print
# cursor: 25 del
