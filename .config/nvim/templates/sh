#!/bin/env bash

#Author: Sebastiaan Van Hoecke

# -----------------------------------------------------------------------------------------------------------------------------
# VARIABLES
# -----------------------------------------------------------------------------------------------------------------------------

# -----------------------------------------------------------------------------------------------------------------------------
# FUNCTIONS
# -----------------------------------------------------------------------------------------------------------------------------

check_args () {

    if [[ "$#" -eq "0" ]]; then

        usage

    fi

    while getopts :ab:c: opt; do

        case $opt in

            a)  echo "a preseed";;
            b)  echo "$OPTARG";;
            c)  echo "$OPTARG";;
            ?)  usage;; 

        esac

    done

    shift "$(expr $OPTIND - 1)"

}

usage () {

cat << _EOF_
  Usage: ${0} [OPTIONS]... [ARGS]...

    description


  OPTIONS:

  EXAMPLES:

_EOF_

}

main () {

    check_args "${@}"

}

# -----------------------------------------------------------------------------------------------------------------------------
# MAIN
# -----------------------------------------------------------------------------------------------------------------------------

main "${@}"

