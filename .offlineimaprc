# vim:ft=dosini

[general]

pythonfile = ~/.offlineimap.py
accounts = hotmail,gmail,sevaho.io,wegroup,praestes.be
# add praestes.io

# -----------------------------------------------------------------------------------------------------------------------------
# HOTMAIL
# -----------------------------------------------------------------------------------------------------------------------------

[Account hotmail]

localrepository = local-hotmail
remoterepository = remote-hotmail

[Repository local-hotmail]

type = Maildir
localfolders = ~/.mail/hotmail

nametrans = lambda folder: {

    'inbox':    'Inbox',
    'sent':     'Sent',
    'drafts':   'Drafts',
    'spam':     'Junk',
    'bin':      'Trash',
    'deleted':  'Deleted',
    'outbox':   'Outbox',

    }.get(folder,folder)

[Repository remote-hotmail]

type = IMAP
remoteusereval = "sebastiaan.vanhoecke@hotmail.be"
remotepasseval = get_pass("misc/sebastiaan.vanhoecke@hotmail.be")
remotehost = imap-mail.outlook.com
remoteport = 993
realdelete = no
ssl = yes
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
maxconnections = 2


nametrans = lambda folder: {

    'Inbox':    'inbox',
    'Sent':     'sent',
    'Drafts':   'drafts',
    'Junk':     'spam',
    'Trash':    'bin',
    'Deleted':  'deleted',
    'Outbox':   'outbox',

    }.get(folder,folder)

folderfilter = lambda folder: folder not in [ 

    'Archive',
    'Archief',
    'Calendar',
    'Contacts',
    'Outlook',
    '[Hotmail]',
    '[Hotmail]/Drafts',
    'Tasks',
    'Notes',
    'Journal',

    ]

# -----------------------------------------------------------------------------------------------------------------------------
# WEGROUP
# -----------------------------------------------------------------------------------------------------------------------------

[Account wegroup]

localrepository = local-wegroup
remoterepository = remote-wegroup

[Repository local-wegroup]

type = Maildir
localfolders = ~/.mail/wegroup
nametrans = lambda folder: {

    'inbox':   'INBOX',
    'sent':    '[Gmail]/Verzonden berichten',
    'drafts':  '[Gmail]/Drafts',
    'spam':    '[Gmail]/Spam',
    'bin':     '[Gmail]/Prullenbak',

    }.get(folder, folder)

[Repository remote-wegroup]

ssl_version = tls1_2
type = Gmail
remoteusereval = "sebastiaan.vanhoecke@wegroup.be"
remotepasseval = get_pass("misc/sebastiaan.vanhoecke@wegroup.be")
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
maxconnections = 2
realdelete = no
ssl = yes

nametrans = lambda folder: {

    '[Gmail]/Drafts':    'drafts',
    '[Gmail]/Verzonden berichten': 'sent',
    '[Gmail]/Spam':      'spam',
    '[Gmail]/Prullenbak':       'bin',
    'INBOX':     'inbox',

    }.get(folder, folder)

folderfilter = lambda folder: folder not in [ 

    '[Gmail]/Junk',
    '[Gmail]/Important',
    '[Gmail]/Starred',
    '[Gmail]/All Mail',
    '[Gmail]/All/Mail',
    '[Gmail].All Mail',
    '[Gmail]/Alle e-mail',
    '[Gmail]/Alle/e-mail',
    '[Gmail].Alle e-mail',
    '[Gmail].Alle.e-mail',
    '[Gmail].Concepten',
    '[Gmail]/Concepten',
    '[Gmail]/Met ster',
    '[Gmail]/Belangrijk',
    '[Gmail] Alle e-mail'

    ]

# -----------------------------------------------------------------------------------------------------------------------------
# GMAIL
# -----------------------------------------------------------------------------------------------------------------------------

[Account gmail]

localrepository = local-gmail
remoterepository = remote-gmail

[Repository local-gmail]

type = Maildir
localfolders = ~/.mail/gmail
nametrans = lambda folder: {

    'inbox':   'INBOX',
    'sent':    '[Gmail]/Sent Mail',
    'drafts':  '[Gmail]/Drafts',
    'spam':    '[Gmail]/Spam',
    'bin':     '[Gmail]/Trash',

    }.get(folder, folder)

[Repository remote-gmail]

ssl_version = tls1_2
# auth_mechanisms = XOAUTH2
type = Gmail
remoteusereval = "sebastiaan.vanhoecke@gmail.com"
remotepasseval = get_pass("misc/sebastiaan.vanhoecke@gmail.com")
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
maxconnections = 2
realdelete = no

nametrans = lambda folder: {

    '[Gmail]/Drafts':    'drafts',
    '[Gmail]/Sent Mail': 'sent',
    '[Gmail]/Spam':      'spam',
    '[Gmail]/Trash':       'bin',
    'INBOX':     'inbox',

    }.get(folder, folder)

folderfilter = lambda folder: folder not in [ 

    '[Gmail]/Junk',
    '[Gmail]/Important',
    '[Gmail]/Starred',
    '[Gmail]/All Mail',
    '[Gmail].All Mail',
    'flagged',
    'archive',
    'Archive'

    ]

# -----------------------------------------------------------------------------------------------------------------------------
# SEVAHO.COM
# -----------------------------------------------------------------------------------------------------------------------------

[Account sevaho.com]

localrepository = local-sevaho.com
remoterepository = remote-sevaho.com

[Repository local-sevaho.com]

type = Maildir
localfolders = ~/.mail/sevaho.com

nametrans = lambda folder: {

    'inbox':    'INBOX',
    'sent':     'INBOX.INBOX.Sent',
    'drafts':   'INBOX.INBOX.Drafts',
    'spam':     'INBOX.INBOX.Junk',
    'bin':      'INBOX.INBOX.Trash',

    }.get(folder,folder)

[Repository remote-sevaho.com]

type = IMAP
remoteusereval = get_pass("sevaho.com/mail/user")
remotepasseval = get_pass("sevaho.com/mail/pass")
remotehost = SSL0.OVH.NET
remoteport = 993
realdelete = no
ssl = yes
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
maxconnections = 2

nametrans = lambda folder: {

    'INBOX':                'inbox',
    'INBOX.INBOX.Sent':     'sent',
    'INBOX.INBOX.Drafts':   'drafts',
    'INBOX.INBOX.Junk':     'spam',
    'INBOX.INBOX.Trash':    'bin',

    }.get(folder,folder)

folderfilter = lambda folder: folder not in [ 

    'INBOX.N1-Snoozed',
    'INBOX.Sent Items',
    'INBOX.Trash',
    'INBOX.Junk',
    'INBOX.Drafts',

    ]

