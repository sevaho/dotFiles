# vim:ft=dosini

[general]

pythonfile = ~/.offlineimap.py
accounts = gmail,hotmail,hogent,sevaho.com,sevaho.io,wegroup

# -----------------------------------------------------------------------------------------------------------------------------
# HOTMAIL
# -----------------------------------------------------------------------------------------------------------------------------

[Account hotmail]

localrepository = local-hotmail
remoterepository = remote-hotmail

[Repository local-hotmail]

type = Maildir
localfolders = ~/.mail/hotmail

nametrans = lambda folder: {

    'inbox':    'Inbox',
    'sent':     'Sent',
    'drafts':   'Drafts',
    'spam':     'Junk',
    'bin':      'Trash',
    'deleted':  'Deleted',
    'outbox':   'Outbox',

    }.get(folder,folder)

[Repository remote-hotmail]

type = IMAP
remoteusereval = get_pass("outlook/hotmail/user")
remotepasseval = get_pass("outlook/hotmail/pass")
remotehost = imap-mail.outlook.com
remoteport = 993
realdelete = no
ssl = yes
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
maxconnections = 2

nametrans = lambda folder: {
    
    'Inbox':    'inbox',
    'Sent':     'sent',
    'Drafts':   'drafts',
    'Junk':     'spam',
    'Trash':    'bin',
    'Deleted':  'deleted',
    'Outbox':   'outbox',

    }.get(folder,folder)

folderfilter = lambda folder: folder not in [ 

    'Archive',
    'Archief',
    'Calendar',
    'Contacts',
    'Outlook',
    '[Hotmail]',
    '[Hotmail].Drafts',
    'Tasks',
    'Notes',
    'Journal',

    ]

# -----------------------------------------------------------------------------------------------------------------------------
# HOGENT
# -----------------------------------------------------------------------------------------------------------------------------

[Account hogent]

localrepository = local-hogent
remoterepository = remote-hogent

[Repository local-hogent]

type = Maildir
localfolders = ~/.mail/hogent

nametrans = lambda folder: {

    'inbox':    'INBOX',
    'sent':     'Sent Items',
    'drafts':   'Drafts',
    'spam':     'Junk Email',
    'bin':      'Trash',
    'deleted':  'Deleted Items',
    'outbox':   'Outbox',

    }.get(folder,folder)

[Repository remote-hogent]

type = IMAP
remoteusereval = get_pass("outlook/student.hogent/user")
remotepasseval = get_pass("outlook/student.hogent/pass")
remotehost = outlook.office365.com
remoteport = 993
realdelete = no
ssl = yes
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
maxconnections = 2

nametrans = lambda folder: {

    'INBOX':        'inbox',
    'Sent Items':   'sent',
    'Drafts':       'drafts',
    'Junk Email':   'spam',
    'Trash':        'bin',
    'Deleted Items':'deleted',
    'Outbox':       'outbox',

    }.get(folder,folder)

folderfilter = lambda folder: folder not in [ 

    'Archive',
    'Archive1',
    'Calendar',
    'Contacts',
    'Tasks',
    'Sent',
    'Notes',
    'Journal',

    ]

# -----------------------------------------------------------------------------------------------------------------------------
# WEGROUP
# -----------------------------------------------------------------------------------------------------------------------------

[Account wegroup]

localrepository = local-wegroup
remoterepository = remote-wegroup

[Repository local-wegroup]

type = Maildir
localfolders = ~/.mail/wegroup
nametrans = lambda folder: {

    'inbox':   'INBOX',
    'sent':    '[Gmail]/Verzonden berichten',
    'drafts':  '[Gmail]/Drafts',
    'spam':    '[Gmail]/Spam',
    'bin':     '[Gmail]/Prullenbak',

    }.get(folder, folder)

[Repository remote-wegroup]

type = Gmail
remoteusereval = get_pass("wegroup/mail/user")
remotepasseval = get_pass("wegroup/mail/pass")
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
maxconnections = 2
realdelete = no

nametrans = lambda folder: {

    '[Gmail]/Drafts':    'drafts',
    '[Gmail]/Verzonden berichten': 'sent',
    '[Gmail]/Spam':      'spam',
    '[Gmail]/Prullenbak':       'bin',
    'INBOX':     'inbox',

    }.get(folder, folder)

folderfilter = lambda folder: folder not in [ 

    '[Gmail]/Junk',
    '[Gmail]/Important',
    '[Gmail]/Starred',
    '[Gmail]/All Mail'
    '[Gmail].All Mail'
    'flagged'
    'archive'
    'Archive'

    ]

